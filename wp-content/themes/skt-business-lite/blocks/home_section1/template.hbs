<div id="skt-builder-home-section1-block" class="skt-builder-block-wrapper skt-builder-home-section1-block skt-builder-home-section1-block-{{id}}" style="background-color: {{blockBackgroundColor}}; background-image: url({{blockBgImageUrl}}); padding-bottom: {{blockPaddingBottom}}px; padding-top: {{blockPaddingTop}}px; {{#if blockParallaxEffect}}background-attachment: fixed;{{/if}}">
	<div class="skt-builder-block-inner skt-builder-block-inner-{{id}}" style="{{#if blockAnimation}}visibility: hidden;{{/if}}">
		<div class="skt-builder-container">
            {{#if blockTitle}}
                <div class="skt-builder-block-title" style="text-align: {{blockTitleAlign}};">
                    <h2 style="color: {{blockTitleColor}}; font-size: {{blockTitleFontSize}}px; {{#if blockTitleSeparator}}margin-bottom: 0;{{else}}margin-bottom: {{blockTitleMarginBottom}}px;{{/if}} text-align: {{blockTitleAlign}};">{{blockTitle}}</h2>
                    {{#if blockTitleSeparator}}<div class="skt-builder-block-title-separator" style="background-color: {{blockTitleSeparatorColor}}; margin-bottom: {{blockTitleMarginBottom}}px;"></div>{{/if}}
                </div>
            {{/if}}
            {{#if blockDescription}}
                <div class="skt-builder-block-description">{{{blockDescription}}}</div>
            {{/if}}
         	<div class="skt-builder-columns-row skt-builder-columns-row-{{blockColumnsCount}}column">
                {{#if blockColumns.length}}
                    {{#each_with_sort blockColumns "order"}}
                        <div class="skt-builder-column skt-builder-featured-column skt-builder-featured-column-{{id}}">
                            <style>
                                .skt-builder-featured-column-{{id}} .skt-builder-featured-column-title a:hover{color: {{titleHoverColor}} !important;}
                            </style>
                            <div class="skt-builder-column-inner" style="text-align: {{columnContentAlign}};">
                                {{#if columnImage}}
                                    <a href="{{columnLink}}" {{#if columnLinkTarget}}target="_blank"{{/if}}><img class="skt-builder-featured-column-image" src="{{columnImage}}"></a>
                                {{else}}
                                    <a href="{{columnLink}}" {{#if columnLinkTarget}}target="_blank"{{/if}}><span class="skt-builder-featured-column-icon {{iconFront}}" style="color: {{iconColor}}"></span></a>
                                {{/if}}
                                <h3 class="skt-builder-featured-column-title"><a href="{{columnLink}}" style="color: {{titleColor}};" {{#if columnLinkTarget}}target="_blank"{{/if}}>{{title}}</a></h3>
                                <div class="skt-builder-featured-column-description" style="color: {{columnDescriptionColor}};">{{{columnDescription}}}</div>
                            </div>
                        </div>
                    {{/each_with_sort}}
                {{/if}}
			</div>
        </div>
	</div>
</div>

<script>
